{
    "swagger": "2.0",
    "info": {
        "title": "BibliotecaTEC API",
        "description": "API para el proyecto programado de bases de datos avanzados",
        "version": "1.0"
    },
    "basePath": "/api",
    "schemes": [
        "http"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "components": {
        "schemas": {
            "Libro": {
                "type": "object",
                "properties": {
                    "_id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "author": {
                        "type": "string"
                    },
                    "user_rating": {
                        "type": "number"
                    },
                    "reviews": {
                        "type": "number"
                    },
                    "year": {
                        "type": "number"
                    },
                    "genre": {
                        "type": "string"
                    },
                    "estado": {
                        "type": "string"
                    }
                }
            }
        }
    },
    "paths": {
        "/libros": {
            "get" : {
                "summary": "Get all books from db.",
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json" : {
                                "schema" : {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Libro"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/libros/{id}": {
            "get": {
                "summary": "Get single book from db",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of book",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ]
            }
        }
    }
}